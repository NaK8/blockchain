---
import CutCornerButton from "../components/CutCornerButton";
import InteriorContent from "../components/InteriorContent.astro";
import InteriorHero from "../components/InteriorHero.astro";
import DefaultLayout from "../layouts/Default.astro";
import Input from "../components/input.astro";
import Textarea from "../components/Textarea.astro";
const title = "Contact Us | Blockforge";
const metaDescription = "If you have any queries feel free to contact us";
---

<DefaultLayout title={title} metaDescription={metaDescription}>
  <InteriorHero>
    <div class="relative">
      <p
        class="uppercase font-extrabold text-center text-zinc-500 tracking-wider"
      >
        Let's Talk
      </p>
      <h1
        class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4"
      >
        Contact Us
      </h1>
      <p
        class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400"
      >
        We are here to help and answer any questions you may have. Reach out to
        us to learn more about our services, get support or to apply for
        positions
      </p>
    </div>
  </InteriorHero>
  <InteriorContent>
    <div class="max-w-xl mx-auto">
      <h2 class="font-heading font-black text-3xl">
        What can we help you with?
      </h2>
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="flex flex-col mt-8"
      >
        <label for="name">Name</label>
        <Input name="name" id="name" type="text" class="mt-1" />
        <label for="email" class="mt-4">Email</label>
        <Input name="email" id="email" type="email" class="mt-1" />
        <label for="message" class="mt-4">Message</label>
        <Textarea name="message" id="message" class="mt-1" />
        <CutCornerButton className="mt-4">Send Message</CutCornerButton>
      </form>
    </div>
  </InteriorContent>
</DefaultLayout>
